{
    "name": "Mindful Shopper",
    "version": "1.0",
    "description": "Be a mindful shopper!",
    "browser_action": {
        "default_popup": "defPopup.html",
        "default_icon": {
          "16": "icons/icon16.png",
          "24": "icons/icon24.png",
          "32": "icons/icon32.png",
          "48": "icons/icon48.png",
          "128": "icons/icon128.png"
        }
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": ["declarativeContent", "storage", "activeTab"],
    "manifest_version": 2
}